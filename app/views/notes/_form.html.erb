<%= simple_form_for @note do |f| %>
  <%= f.error_notification %>
  <div class="inputs">
    <%= f.input :title, autofocus: true %>
    <%= f.input :text, as: :text %>
  </div>
  <div class="actions">
    <%= f.button :submit, value: "Save" %>
    or <%= link_to "Cancel", root_path %>
  </div>
<% end %>
